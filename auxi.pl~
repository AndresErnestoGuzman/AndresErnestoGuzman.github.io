@files=split(/\s+/,`find . -name "*html"`);
foreach $file (@files){
    open(FF,$file);
    open(NF,">newfile");
    while(<FF>){
	s/<base href=\"https:\/\/alma-intweb.mtk.nao.ac.jp\/~andresgz\">/<base href=\"http:\/\/www2.nao.ac.jp\/~andresguzman\">/;
	print NF $_;
    }
    close NF; close FF;
    system "mv newfile $file";

}
